include _mixins

doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title= title || 'Page name'

        // Styles::Start
        include _loadCss
        // Styles::End

        // Yandex Map
        if yandexMap == true
            script(src="https://api-maps.yandex.ru/2.1/?apikey=39aa5abe-ec5b-45c6-9d35-323c61ba7263&lang=ru_RU")

    body(class= bodyClass ? bodyClass : '')

        style.
            body {
                height: auto;
            }

            .devmode {
                background: #c10b19;
                position: sticky;
                top: 0;
                text-align: center;
                border-bottom: 1px solid #21263a;
                z-index: 99;
            }

        .devmode Сайт находится в разработке. Возможны неточности в описании.

        #page.page

            // Side::Start
            block side
                include _sidebar
            // Side::End

            .page-inner
                // Header::Start
                block header
                    include _header
                // Header::End

                // Main::Start
                main#main
                    block main
                // Main::End

                // Footer::Start
                block footer
                    include _footer
                // Footer::End

        block popups
            include ../components/_popup

        // Scripts::Start
        include _loadScripts
        // Scripts::End